<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="tech.ankainn.edanapplication.ui.auth.LoginFragment"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/host_main_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/host_main_fragment"
        android:name="tech.ankainn.edanapplication.ui.hostmain.HostMainFragment"
        android:label="HostMainFragment">

        <action
            android:id="@+id/action_main_to_form_one"
            app:destination="@id/form_one_host_graph"/>

        <action
            android:id="@+id/action_main_to_form_two"
            app:destination="@id/form_two_host_graph"/>
    </fragment>

    <navigation
        android:id="@+id/form_one_host_graph"
        app:startDestination="@id/form_one_host_fragment">

        <fragment
            android:id="@+id/form_one_host_fragment"
            android:name="tech.ankainn.edanapplication.ui.formOne.FormOneHostFragment"
            android:label="FormOneHostFragment">

            <action
                android:id="@+id/action_form_one_to_camera"
                app:destination="@+id/camera_graph"/>
        </fragment>
    </navigation>

    <navigation
        android:id="@+id/form_two_host_graph"
        app:startDestination="@id/form_two_host_fragment">

        <fragment
            android:id="@+id/form_two_host_fragment"
            android:name="tech.ankainn.edanapplication.ui.formTwo.FormTwoHostFragment"
            android:label="FormTwoHostFragment" >

            <action
                android:id="@+id/action_form_two_to_camera"
                app:destination="@id/camera_graph" />
        </fragment>
    </navigation>

    <include app:graph="@navigation/camera_graph" />

</navigation>