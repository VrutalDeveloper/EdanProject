<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            app:title="@string/form_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/form_host_fragment_container"
        android:name="tech.ankainn.edanapplication.ui.common.ScopeNavHostFragment"
        app:navGraph="@navigation/form_two_graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageButton
            android:id="@+id/btn_save"
            android:tint="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/dim_sma"
            android:contentDescription="@string/save"
            android:padding="@dimen/dim_nor"
            android:background="@drawable/ripple_oval"
            android:src="@drawable/ic_save_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_form_two_switch"
            android:tint="@color/colorPrimary"
            android:padding="@dimen/dim_nor"
            android:background="@drawable/ripple_oval"
            android:src="@drawable/ic_folder_24dp"
            android:layout_marginHorizontal="@dimen/dim_sma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_camera"
            android:tint="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/dim_sma"
            android:contentDescription="@string/camera"
            android:padding="@dimen/dim_nor"
            android:background="@drawable/ripple_oval"
            android:src="@drawable/ic_photo_camera_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:tint="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/dim_sma"
            android:contentDescription="@string/back"
            android:padding="@dimen/dim_nor"
            android:background="@drawable/ripple_oval"
            android:src="@drawable/ic_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:tint="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/dim_sma"
            android:contentDescription="@string/next"
            android:padding="@dimen/dim_nor"
            android:background="@drawable/ripple_oval"
            android:src="@drawable/ic_arrow_forward_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>