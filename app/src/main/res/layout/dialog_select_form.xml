<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:paddingTop="@dimen/dim_nor"
        android:paddingBottom="@dimen/dim_nor"
        android:paddingStart="@dimen/dim_xxxbig"
        android:paddingEnd="@dimen/dim_xxxbig"
        android:gravity="center"
        android:text="@string/add_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/form_one"
        android:background="?selectableItemBackground"
        android:textSize="@dimen/text_big"
        android:padding="@dimen/dim_big"
        android:gravity="center_vertical"
        android:text="@string/form_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/form_two"
        android:background="?selectableItemBackground"
        android:textSize="@dimen/text_big"
        android:padding="@dimen/dim_big"
        android:gravity="center_vertical"
        android:text="@string/form_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>